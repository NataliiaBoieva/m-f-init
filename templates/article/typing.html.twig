{% extends 'base.html.twig' %}

{% block title %}Mindful Beauty{% endblock %}

{% block body %}

    {% for row in articles|batch(4) %}
        <div class="row">
            {% for article in row %}
                <div class="col-12 col-md-6 col-lg-3 mb-4">
                    <div class="card border shadow lift">
                        <div class="card-body">
                            <div class="card-title">
                                <h4 class="font-weight-light">
                                    {{ article }}
                                </h4>
                            </div>

                            <a href="{{ path('article', { slug: article.slug }) }}"
                               class="btn btn-sm btn-blue stretched-link">
                                {{ 'View'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}